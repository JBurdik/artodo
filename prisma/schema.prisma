generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider              = "zod-prisma"
  output                = "./zod"
  prismaJsonNullability = "true"
  relationModel         = "true"
  useDecimalJs          = "true"
  modelSuffix           = "Schema"
  modelCase             = "camelCase"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       String  @id @default(uuid())
  img      String
  name     String
  desc     String
  price    Int
  stock    Int
  featured Boolean @default(false)
}

model References {
  id        String @id
  fullName  String
  reference String
}
